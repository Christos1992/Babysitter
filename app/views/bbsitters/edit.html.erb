<div class="wrapper" style="margin-top: -70px;">
<div id="" class="container" align-items>
  <div class="row">
  <div class="col-xs-offset-2  col-xs-8 col-md-offset-3  col-xs-6">
  <div id="profile-bbsitter" class="card">
    <h1>  Your Profile</h1>


<%= simple_form_for(@bbsitter) do |f| %>
<div class="form-inputs">
<%= f.input :first_name %>

<%= f.input :last_name %>

<%= f.input :language %>

<%= f.input :price %>

<%= f.input :city %>

<%= f.input :description %>

<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>

<%= f.input :experience %>

</div>


  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>


 <td>
  <div id="link-destroy">
   <% if policy(@bbsitter).destroy? %>
     <%= link_to 'Delete your account', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  </div>
 </td>
<div style = "height: 200px" >
</div>
</div>
