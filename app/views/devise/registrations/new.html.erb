<div class="wrapper registration" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(244,244,244,1)), url('https://vancouverfamilymagazine.com/wp-content/uploads/2016/06/yoga-boy-mom.gif'); margin-top:-70px;">
<div id="" class="container" align-items>
  <div class="row">
  <div class="col-xs-offset-2  col-xs-8 col-md-offset-3  col-xs-6">
  <div id="signup" class="card">
    <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


  <div class="form-input">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :is_parent, label: "Sign up as a parent" %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>

<%= f.error_notification%>
<% end %>


</div>


<div id="login-option" class="card">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
