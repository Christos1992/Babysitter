<div class="wrapper" style="margin-top: -70px;">
<div class="container">
  <div class="row">
    <div class="col-xs-offset-2  col-xs-8 col-md-offset-3  col-xs-6">
      <div id="log" class="card">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

  <div id="btn-log" class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
  <% end %>

  <%= link_to "Forgot your password?", new_password_path(resource_name), id:"password-request" %><br />

</div>
<div id="signup-option" class="card">

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
<div style= "height: 200px;">
</div>
</div>
