<div class="card chatbox">
<h2><strong>Contact The Babysitter</strong></h2>
<h3> The Reservation date: <%= @reservation.reservation_date%></h3>
<h3> Your name: <%= @reservation.parent.last_name %></h3>

<% if !current_user.is_parent? %>
  <%= simple_form_for(@reservation) do |f| %>
  <%= f.input :status, label: "confirm the reservation" %>
  <% end %>
<% end %>

<div id="messages">
  <div class="row">
    <div class="col-xs-12">
      <h3>Messages:</h3>
      <% if @reservation.messages.empty? %>
        <p>Be the first to send a message</p>
      <% else %>
        <ul class="list-group">
          <% @reservation.messages.each do |message| %>
            <li>
               <%= render 'messages/show', message: message %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
